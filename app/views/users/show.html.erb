<div class="panel panel-default">
  	<div class="panel-body">
  		<div class="col-md-6">
			<h1 class="navbar_title"><%= @user.username%></h2><br/>
			<div><%= image_tag @user.avatar.url(:medium) %></div><br/><br/>
			<h2>Biography</h2><br/>
			<div><%= @user.biography%></div><br/><br/>
			<h2>Under Review</h2>
			<ul class="slider5" id="menu">
      			<%@user.prints.each do |print|%>
        			<div class="sub">
          				<div class="thumbnail">
            				<%= link_to (image_tag print.image.url(:thumb), class: 'image'), print %>
            			</div>
            		</div>
            	<% end%>
            </ul>
            <h2>Products</h2>
            <ul class="slider5" id="menu">
      			<%@user.products.each do |product|%>
        			<div class="sub">
          				<div class="thumbnail">
            				<%= link_to (image_tag product.image.url(:thumb), class: 'image'), product %>
            			</div>
            		</div>
            	<% end%>
            </ul>
       		<h2></h2>
        </div>
	</div>
	<%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-danger" %>
	</div>
</div> 

<script>
  $('.slider5').bxSlider({
    minSlides: 3,
    maxSlides: 6,
    slideWidth: 200,
    infiniteLoop: true
  });
</script>

