<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
	<%= image_tag @product.image.url(:medium) %>
</p>
<p>
  <strong>Artist:</strong>
  <%= @product.creator %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<ul>
  <% @product.subproducts.each do |subproduct| %>
  	<li>Size<%= subproduct.size %></li>
  	<li>Quantity<%= subproduct.quantity %></li>
  	<li><strong>Price<%= subproduct.price %></strong></li>
  	<br/>
  	<%= render "subproduct_row", subproduct: subproduct, order_item: @order_item %>
  	<% end %>
</ul>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
