<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= "#{subproduct.name} #{subproduct.size}" %></small></h4>
      <h4><%= "Quantity: #{subproduct.quantity}" %></h4>
      <% if current_user.admin? %>
        <h4><%= link_to "Edit", edit_product_subproduct_path(@product, subproduct), class: "btn btn-default"%></h4>
      <% end %>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency subproduct.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :subproduct_id, value: subproduct.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>