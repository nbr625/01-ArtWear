<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to (image_tag product.image.url(:medium)), product_path(product) %></td>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
	<%= link_to 'New Product', new_product_path %>
<% end %>