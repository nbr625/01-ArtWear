<%= form_for @product, html: { multipart: true } do |f| %>


  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: 'name' %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :creator %><br>
    <%= f.text_field :creator, id: 'creator' %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, id: 'description' %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :image %><br>
    <div><%= f.file_field :image, hide_label: true, id: 'image' %></div>
  </div>
  <br/>
  <div>
    <%= f.radio_button :on_sale, false, :checked => true %> 
    <%= label :on_sale_false, 'no' %>
    <%= f.radio_button :on_sale, true %>
    <%= label :on_sale_true, 'yes' %>
  </div>

  <br/><br/>  
  <div class="actions">
    <%= f.submit "Post Product", class: "btn btn-default"%>
  </div>
<% end %>
