<div class="panel panel-default">
  <div class="panel-body">
    <h1>Sign up <em style="float: right;"><%= render "devise/shared/links" %></em></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="form-field"><%= f.label :email %></div>
        <div style="width: 50%; float: right; padding: 5px"><input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email"></div>
      </div>
      <br/>
      <br/>

      <div class="field">
        <div class="form-field"><%= f.label :password %><em> (8 chars min)</em>
          
        </div>
        <div style="width: 50%; float: right; padding: 5px"><input autocomplete="off" type="password" name="user[password]" id="user_password"></div>
      </div>
      <br/>
      <br/>
      

      <div class="field">
        <div class="form-field"><%= f.label :password_confirmation %></div>
        <div style="width: 50%; float: right; padding: 5px"><input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation"></div>
      </div>
      <br/>
      <br/>
      <div class="field">
        <div class="form-field"><%= f.label :username %>
        </div>
        <div style="width: 50%; float: right; padding: 5px"><input type="text" name="user[username]" id="user_username"></div>
      </div>
      <br/>
      <br/>


      <div class="field">
        <div class="form-field"><%= f.label :biography %>
        </div>
        <div style="width: 50%; float: right; padding: 5px"><textarea name="user[biography]" id="user_biography"></textarea></div>
      </div>
      <br/>
      <br/><br/>

      <div class="field">
        <div class="form-field"><%= f.label :avatar %></div>
        </div>
        <div style="width: 50%; float: right; padding: 5px"><input type="file" name="user[avatar]" id="user_avatar"></div>
      </div>
      <div class="actions">


        <div style="text-align: center;"><%= f.submit "Sign up", class: "btn btn-danger", id: 'signupsubmit' %></div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    
  </div>
</div>
