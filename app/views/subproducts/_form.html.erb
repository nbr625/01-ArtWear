<%= form_for ([@product, @product.subproducts.build]) do |f| %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 'any'%>
  </div>
  <br/><br/>  
  <div class="actions">
    <%= f.submit "Post Subproduct", class: "btn btn-default"  %>
  </div>
<% end %>